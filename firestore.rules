/**
 * @fileoverview Firestore Security Rules for Mshkur AI Studio.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for all user-specific data.
 * Public collections like templates and referrals have specific read/write access
 * to support their functionality while protecting data integrity.
 *
 * Data Structure:
 * - User-specific data is nested under `/users/{userId}`.
 * - Global data (referrals, inbox, templates) is in top-level collections.
 *
 * Key Security Decisions:
 * - Users can only access their own data within `/users/{userId}`.
 * - Referral records are publicly readable, but writes are owner-restricted.
 * - Shared inbox messages can be created by any authenticated user but can only
 *   be modified or deleted by the original creator.
 * - Templates are publicly readable but writable only by admins (not implemented yet, so writes are locked).
 *
 * Denormalization for Authorization:
 * - `referrals` and `inbox_messages` documents store user IDs within each document
 *   to avoid costly `get()` calls and enable secure, independent authorization.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Grants access to a user's point records based on path-based ownership.
     */
    match /users/{userId}/points/{pointId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && isCorrectUser(request.resource.data);
      allow update: if isSignedIn() && isExistingOwner(userId) && isCorrectUser(request.resource.data);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }
    
    /**
     * @description Grants access to a user's posts based on path-based ownership.
     */
    match /users/{userId}/posts/{postId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && isCorrectUser(request.resource.data);
      allow update: if isSignedIn() && isExistingOwner(userId) && isCorrectUser(request.resource.data);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Grants access to a user's social media accounts based on path-based ownership.
     */
    match /users/{userId}/social_media_accounts/{accountId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && isCorrectUser(request.resource.data);
      allow update: if isSignedIn() && isExistingOwner(userId) && isCorrectUser(request.resource.data);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Grants access to a user's analytics data.
     */
    match /users/{userId}/analytics/{analyticId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && isCorrectUser(request.resource.data);
      allow update: if isSignedIn() && isExistingOwner(userId) && isCorrectUser(request.resource.data);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Grants access to a user's AI usage logs.
     */
    match /users/{userId}/ai_usage/{usageId} {
      allow get, list: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId) && isCorrectUser(request.resource.data);
      allow update: if isSignedIn() && isExistingOwner(userId) && isCorrectUser(request.resource.data);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Grants public read access to referral records, but restricts writes to the owner.
     */
    match /referrals/{referralId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.referrerId == request.auth.uid;
      allow update: if isSignedIn() && isExistingOwnerReferral(resource.data.referrerId);
      allow delete: if isSignedIn() && isExistingOwnerReferral(resource.data.referrerId);
    }

    /**
     * @description Manages access for the shared inbox.
     * Any authenticated user can create a message. Only the creator can modify or delete it.
     */
    match /inbox_messages/{messageId} {
      allow get, list: if isSignedIn();
      allow create: if isSignedIn() && isCorrectUser(request.resource.data);
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    /**
     * @description Templates are public, but not writable for now.
     */
    match /templates/{templateId} {
      allow get, list: if true;
      allow create, update, delete: if false; // Protect templates from modification
    }


    // --- Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isSignedIn() && isOwner(userId) && resource != null;
    }

    function isExistingOwnerReferral(referrerId) {
      return isSignedIn() && request.auth.uid == referrerId && resource != null;
    }
    
    function isCorrectUser(data) {
        return data.userId == request.auth.uid;
    }
  }
}
    